<hr>
<div id="section-bouton" class="grid">
  <div class="section-header text-center">
    <h3> {{ section.settings.text-box }} </h3>
  </div>

  {% for block in section.blocks %}  
  <div class="{{ block.settings.lien }} custom" id="call-to-action">   
    <a href="{{ block.settings.lien }}" style="font-size: {{ block.settings.size }}px" class="bouton {{ block.settings.color }} text-center">{{ block.settings.textelien }}</a>
  </div> 
  {% endfor %}

</div>  
{% schema %}
{
  "name": "Home button",
	"max_blocks": 3,
  "settings": [
    {
      "id": "text-box",
      "type": "text",
      "label": "Heading",
      "default": "Title"
    
    }
  ],
  "blocks": [
    {
      "type": "select",
      "name": "Ajouter un bouton",
      "settings": [
        {
          "id": "lien",
          "type": "url",
       		"label": "Lien du Bouton"
        },
        {
          "id": "textelien",
          "type": "text",
          "label": "Texte Bouton",
          "default": "Valider"
        },
        {
   "type": "select",
   "id": "color",
   "options": [
      { "value": "noir", "label": "Noir"},
      { "value": "rouge", "label": "Rouge"},
      { "value": "bleu", "label": "Bleu"},
      { "value": "jaune", "label": "Jaune"},
      { "value": "gris", "label": "Gris"}
      
   ],
   "label": "Couleur bouton"
},
        {
    "type":      "range",
    "id":        "size",
    "min":       20,
    "max":        60,
    "step":       1,
    "unit":       "px",
    "label":     "Font size",
    "default":   16
}
      ]
    }
  ],
  "presets": [
    {
      "name": "Block Button",
      "category": "Home Button",
      "blocks": [
        { 
          "type": "select"
        }
      ]
    }
  ]
}
{% endschema %}

